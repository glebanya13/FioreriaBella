<Window x:Class="FioreriaBella.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fioreria Bella"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#FFF8F0E3">
  <Border BorderBrush="Goldenrod"
          BorderThickness="4"
          Background="#FFF8F0E3"
          SnapsToDevicePixels="True">
    <Grid>
      <Image Source="pack://application:,,,/Resources/Background.jpg"
             Stretch="UniformToFill"
             Opacity="0.8"
             Panel.ZIndex="0"/>
      <Grid Height="40" Background="#FFEED6A0"
            VerticalAlignment="Top"
            MouseLeftButtonDown="Window_MouseLeftButtonDown"
            Panel.ZIndex="2">
        <TextBlock Text="Fioreria Bella"
                   FontFamily="Georgia"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="SaddleBrown"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0"/>
        <Button Content="Ã—"
                Width="40" Height="40"
                Background="Transparent"
                BorderThickness="0"
                FontSize="18"
                FontWeight="Bold"
                Foreground="DarkRed"
                Cursor="Hand"
                Click="CloseButton_Click"
                HorizontalAlignment="Right"/>
      </Grid>
      <Frame x:Name="MainFrame"
             Margin="0,40,0,0"
             NavigationUIVisibility="Hidden"
             Background="Transparent"
             Panel.ZIndex="1"/>

    </Grid>
  </Border>
</Window>
