<Page x:Class="FioreriaBella.MVVM.Views.OrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Подтверждение заказа">

	<Grid Background="Transparent">
		<Border Padding="30"
                BorderBrush="Goldenrod"
                BorderThickness="2"
                CornerRadius="16"
                Width="820"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFFDF5F0"
                SnapsToDevicePixels="True">

			<StackPanel Width="350" HorizontalAlignment="Center">

				<TextBlock Text="Подтверждение заказа"
                           FontSize="26"
                           FontWeight="Bold"
                           FontFamily="Georgia"
                           Foreground="DarkOliveGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

				<TextBlock Text="Имя клиента:" FontWeight="SemiBold"/>
				<TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,3"
                         Style="{StaticResource ElegantInputStyle}"/>
				<TextBlock Text="{Binding CustomerNameHint}"
                           Foreground="{Binding CustomerNameColor}"
                           FontSize="12"
                           Margin="0,0,0,10"/>

				<TextBlock Text="Адрес доставки:" FontWeight="SemiBold"/>
				<TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,3"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Style="{StaticResource ElegantInputStyle}"/>
				<TextBlock Text="{Binding AddressHint}"
                           Foreground="{Binding AddressColor}"
                           FontSize="12"
                           Margin="0,0,0,10"/>

				<TextBlock Text="Способ оплаты:" FontWeight="SemiBold"/>
				<ComboBox SelectedValue="{Binding PaymentMethod, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="Content"
                    Margin="0,0,0,10"
                    Style="{StaticResource ElegantComboBoxStyle}">
					<ComboBoxItem Content="Наличные" />
					<ComboBoxItem Content="Карта" />
					<ComboBoxItem Content="Перевод" />
				</ComboBox>
				<TextBlock Text="{Binding PaymentMethodHint}"
                           Foreground="{Binding PaymentMethodColor}"
                           FontSize="12"
                           Margin="0,0,0,15"/>

				<TextBlock Text="Сумма к оплате:" FontWeight="SemiBold"/>
				<TextBlock Text="{Binding TotalAmount, StringFormat=₽{0:F2}}"
                           Foreground="DarkSlateGray"
                           FontFamily="Palatino Linotype"
                           Margin="0,0,0,15"/>

				<TextBlock Text="Содержимое заказа:" FontWeight="SemiBold" Margin="0,0,0,5"/>
				<TextBlock Text="{Binding Summary}"
                           TextWrapping="Wrap"
                           Foreground="DarkSlateGray"
                           FontFamily="Palatino Linotype"
                           Margin="0,0,0,15"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена"
                            Width="100"
                            Height="40"
                            Command="{Binding BackCommand}"
                            Style="{StaticResource OutlinedButtonStyle}"/>
                    <Button Content="Подтвердить заказ"
                            Width="180"
                            Height="40"
							Margin="10 0 0 0"
                            Command="{Binding ConfirmOrderCommand}"
                            Style="{StaticResource ElegantButtonStyle}"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Page>
