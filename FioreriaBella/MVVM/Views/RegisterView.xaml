<Page x:Class="FioreriaBella.MVVM.Views.RegisterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register"
      Background="Transparent">

  <Grid>
    <Border Background="#FFFDF5F0"
            CornerRadius="20"
            Padding="25"
            BorderThickness="3"
            BorderBrush="SaddleBrown"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="420"
            Opacity="0.97">

      <StackPanel>

        <TextBlock Text="Crea un account"
                   FontSize="22"
                   FontFamily="Palatino Linotype"
                   FontWeight="Bold"
                   Foreground="DarkOliveGreen"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <TextBlock Text="Имя пользователя"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <TextBox x:Name="UsernameBox"
                 Margin="0,1,0,0"
                 Height="32"
                 Padding="6,3"
                 Style="{StaticResource ElegantInputStyle}"
                 FocusVisualStyle="{x:Null}"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Foreground="{Binding UsernameValidationColor}"
                   FontSize="12"
                   Margin="0,1,0,5"
                   Height="16"
                   Text="{Binding UsernameValidationHint}"
                   Visibility="Visible"/>

        <TextBlock Text="Email"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <TextBox x:Name="EmailBox"
                 Margin="0,1,0,0"
                 Height="32"
                 Padding="6,3"
                 Style="{StaticResource ElegantInputStyle}"
                 FocusVisualStyle="{x:Null}"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Foreground="{Binding EmailValidationColor}"
                   FontSize="12"
                   Margin="0,1,0,5"
                   Height="16"
                   Text="{Binding EmailValidationHint}"
                   Visibility="Visible"/>

        <TextBlock Text="Пароль"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <PasswordBox x:Name="PasswordBox"
                     Margin="0,1,0,0"
                     Height="32"
                     Padding="6,3"
                     Style="{StaticResource ElegantPasswordStyle}"
                     FocusVisualStyle="{x:Null}"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBlock Foreground="{Binding PasswordValidationColor}"
                   FontSize="12"
                   Margin="0,1,0,10"
                   Height="16"
                   Text="{Binding PasswordValidationHint}"
                   Visibility="Visible"/>

        <TextBlock Text="Подтвердите пароль"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                     Margin="0,1,0,0"
                     Height="32"
                     Padding="6,3"
                     Style="{StaticResource ElegantPasswordStyle}"
                     FocusVisualStyle="{x:Null}"
                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
        <TextBlock Foreground="{Binding ConfirmPasswordValidationColor}"
                   FontSize="12"
                   Margin="0,1,0,10"
                   Height="16"
                   Text="{Binding ConfirmPasswordValidationHint}"
                   Visibility="Visible"/>

        <TextBlock Foreground="Red"
                   FontSize="12"
                   Margin="0,0,0,10"
                   Text="{Binding ErrorMessage}"
                   TextWrapping="Wrap"/>

        <Button Content="Регистрация"
                Width="150"
                Height="38"
                HorizontalAlignment="Center"
                Style="{StaticResource ElegantButtonStyle}"
                Margin="0,0,0,6"
                Command="{Binding RegisterCommand}"
                CommandParameter="{Binding ElementName=ConfirmPasswordBox}"/>

        <Button Content="Войти"
                Width="150"
                Height="38"
                HorizontalAlignment="Center"
                Style="{StaticResource OutlinedButtonStyle}"
                Command="{Binding NavigateToLoginCommand}"/>
      </StackPanel>
    </Border>
  </Grid>
</Page>
