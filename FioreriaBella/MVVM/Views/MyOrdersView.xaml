<Page x:Class="FioreriaBella.MVVM.Views.MyOrdersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FioreriaBella.MVVM.Converters"
      Title="Мои заказы"
      Background="Transparent">

    <Page.Resources>
        <local:MultiplyConverter x:Key="MultiplyConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="Transparent">
        <Border Padding="30"
                BorderBrush="Goldenrod"
                BorderThickness="2"
                CornerRadius="16"
                Width="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFFDF5F0"
                SnapsToDevicePixels="True"
                Margin="0,20">

            <StackPanel>
                <Button Content="← Назад"
                        Width="100"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left"
                        Style="{StaticResource ElegantButtonStyle}"
                        Command="{Binding BackCommand}"/>

                <TextBlock Text="Мои заказы"
                           FontSize="26"
                           FontFamily="Georgia"
                           FontWeight="Bold"
                           Foreground="DarkOliveGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <DataGrid ItemsSource="{Binding Orders}" 
                          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          RowHeight="40"
                          ColumnHeaderHeight="35"
                          Style="{StaticResource ElegantDataGridStyle}"
                          RowDetailsVisibilityMode="VisibleWhenSelected"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Width="Auto">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" MinWidth="50"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy'}" Width="*" MinWidth="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*" MinWidth="120"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat='{}{0:N2} ₽'}" Width="*" MinWidth="100"/>
                        <DataGridTemplateColumn Header="Действие" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Отменить" 
                                                Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource OutlinedButtonStyle}"
                                                Margin="2"
                                                Padding="5,2"
                                                Width="80"
                                                Height="25"
                                                FontSize="12"
                                                Visibility="{Binding Status, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Отменен}"/>
                                        <TextBlock Text="Отменен" 
                                                   Foreground="Gray"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"
                                                   Visibility="{Binding Status, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Invert}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Background="#FFF8F0E0" Padding="10" Margin="5" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="Состав заказа:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding OrderItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <TextBlock Text="{Binding Product.Name}" Width="200"/>
                                                    <TextBlock Text="{Binding Product.Price, StringFormat='{}{0:N2} ₽'}" Width="100"/>
                                                    <TextBlock Text="{Binding Quantity}" Width="80"/>
                                                    <TextBlock Text="{Binding Path=., Converter={StaticResource MultiplyConverter}, StringFormat='{}{0:N2} ₽'}" Width="100"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>