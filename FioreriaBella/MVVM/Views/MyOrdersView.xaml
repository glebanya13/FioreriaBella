<Page x:Class="FioreriaBella.MVVM.Views.MyOrdersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FioreriaBella.MVVM.Converters"
      Title="Мои заказы"
      Background="Transparent">

    <Page.Resources>
        <local:MultiplyConverter x:Key="MultiplyConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid Background="Transparent">
        <Border Padding="30"
                BorderBrush="Goldenrod"
                BorderThickness="2"
                CornerRadius="16"
                Width="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFFDF5F0"
                SnapsToDevicePixels="True"
                Margin="0,20">

            <StackPanel>
                <Button Content="← Назад"
                        Width="100"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left"
                        Style="{StaticResource ElegantButtonStyle}"
                        Command="{Binding BackCommand}"/>

                <TextBlock Text="Мои заказы"
                           FontSize="26"
                           FontFamily="Georgia"
                           FontWeight="Bold"
                           Foreground="DarkOliveGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <DataGrid ItemsSource="{Binding Orders}" 
                          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          RowHeight="40"
                          ColumnHeaderHeight="35"
                          Style="{StaticResource ElegantDataGridStyle}"
                          RowDetailsVisibilityMode="VisibleWhenSelected"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Width="Auto">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" MinWidth="50"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy'}" Width="*" MinWidth="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*" MinWidth="120"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat='{}{0:N2} ₽'}" Width="*" MinWidth="100"/>
                        <DataGridTemplateColumn Header="Действие" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Отменить" 
                                                Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"
                                                Padding="5,2"
                                                Width="80"
                                                Height="25"
                                                FontSize="12">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource OutlinedButtonStyle}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Отменен">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Доставлен">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <TextBlock Text="Отменен" 
                                                   Foreground="Gray"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Отменен">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" 
                                                    VerticalAlignment="Center"
                                                    Margin="5,0">
                                            <TextBlock Text="Доставлен" 
                                                       Foreground="DarkGreen"
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,10,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Доставлен">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Background="#FFF8F0E0" Padding="10" Margin="5" CornerRadius="8" x:Name="OrderDetailsBorder" DataContext="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="Состав заказа:" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding OrderItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="Goldenrod" 
                                                        BorderThickness="1" 
                                                        CornerRadius="5" 
                                                        Padding="10" 
                                                        Margin="0,5" 
                                                        Background="White">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Image Grid.Column="0"
                                                               Source="{Binding Product.Picture, Converter={StaticResource ImagePathConverter}}" 
                                                               Width="80" 
                                                               Height="80" 
                                                               Stretch="UniformToFill" 
                                                               Margin="0,0,15,0"/>
                                                        
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Product.Name}" 
                                                                       FontWeight="Bold" 
                                                                       FontSize="14"
                                                                       Foreground="#4B2E2B"
                                                                       Margin="0,0,0,5"/>
                                                            <TextBlock Text="{Binding Product.Description}" 
                                                                       FontStyle="Italic" 
                                                                       FontSize="12"
                                                                       Foreground="#6B4E3E"
                                                                       TextWrapping="Wrap"
                                                                       MaxWidth="300"
                                                                       TextTrimming="WordEllipsis"/>
                                                        </StackPanel>
                                                        
                                                        <TextBlock Grid.Column="2" 
                                                                   Text="{Binding Product.Price, StringFormat='{}{0:N2} ₽'}" 
                                                                   Width="100"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="DarkOliveGreen"/>
                                                        
                                                        <TextBlock Grid.Column="3" 
                                                                   Text="x" 
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="10,0"
                                                                   FontWeight="Bold"/>
                                                        
                                                        <TextBlock Grid.Column="4" 
                                                                   Text="{Binding Quantity}" 
                                                                   Width="50"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="Bold"/>
                                                        
                                                        <TextBlock Grid.Column="5" 
                                                                   Text="=" 
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="10,0"
                                                                   FontWeight="Bold"/>
                                                        
                                                        <TextBlock Grid.Column="6" 
                                                                   Text="{Binding Path=., Converter={StaticResource MultiplyConverter}, StringFormat='{}{0:N2} ₽'}" 
                                                                   Width="100"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="Bold"
                                                                   Foreground="DarkOliveGreen"/>
                                                        
                                                        <Button Grid.Column="7"
                                                                Content="Отзыв" 
                                                                Command="{Binding DataContext.LeaveReviewCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                CommandParameter="{Binding Product}"
                                                                Width="80"
                                                                Height="30"
                                                                FontSize="12"
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right">
                                                            <Button.Style>
                                                                <Style TargetType="Button" BasedOn="{StaticResource OutlinedButtonStyle}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding DataContext.Status, ElementName=OrderDetailsBorder}" Value="Доставлен">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>