<Page x:Class="FioreriaBella.MVVM.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/FioreriaBella;component/MVVM/Resources/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>

  <Grid>
    <Border Background="#FFFDF5F0"
                CornerRadius="20"
                Padding="25"
                BorderThickness="3"
                BorderBrush="SaddleBrown"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="420"
                Opacity="0.97">
      <StackPanel>
        <TextBlock Text="Benvenuto alla Fioreria Bella"
                           FontSize="22"
                           FontFamily="Palatino Linotype"
                           FontWeight="Bold"
                           Foreground="DarkOliveGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

        <TextBlock Text="Email"
                           FontSize="15"
                           Foreground="SaddleBrown"/>
        <TextBox Margin="0,4,0,0"
                         Height="32"
                         Padding="6,3"
                         Style="{StaticResource ElegantInputStyle}"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="{Binding EmailValidationHint}"
                           Foreground="{Binding EmailValidationColor}"
                           FontSize="12"
                           Margin="0,2,0,8"/>

        <TextBlock Text="Пароль"
                           FontSize="15"
                           Foreground="SaddleBrown"/>
        <PasswordBox x:Name="PasswordBox"
                             Margin="0,4,0,0"
                             Height="32"
                             Padding="6,3"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Style="{StaticResource ElegantPasswordStyle}"/>
        <TextBlock Text="{Binding PasswordValidationHint}"
                           Foreground="{Binding PasswordValidationColor}"
                           FontSize="12"
                           Margin="0,2,0,8"/>

        <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,4"/>

        <Button Content="Войти"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource ElegantButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,5"/>

        <Button Content="Регистрация"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource OutlinedButtonStyle}"
                        HorizontalAlignment="Center"/>
      </StackPanel>
    </Border>
  </Grid>
</Page>
