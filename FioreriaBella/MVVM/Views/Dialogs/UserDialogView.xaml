<Window x:Class="FioreriaBella.MVVM.Views.Dialogs.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Width="700"
        Height="Auto">

  <Border Background="#FFFDF5F0"
          CornerRadius="20"
          Padding="40"
          BorderThickness="3"
          BorderBrush="SaddleBrown"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="700"
          Opacity="0.97">
    <StackPanel>

      <TextBlock Text="Детали пользователя"
                 FontSize="28"
                 FontFamily="Georgia"
                 FontWeight="Bold"
                 Foreground="SaddleBrown"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,30" />

      <TextBlock Text="Имя пользователя"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Text="{Binding UsernameValidationHint}"
                 Foreground="{Binding UsernameValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <TextBlock Text="Email"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Text="{Binding EmailValidationHint}"
                 Foreground="{Binding EmailValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <TextBlock Text="Пароль"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <PasswordBox x:Name="PasswordBox"
             Style="{StaticResource ElegantPasswordStyle}"
             Height="40"
             Margin="0,6,0,0"
             PasswordChanged="PasswordBox_PasswordChanged" />
      <TextBlock Text="{Binding PasswordValidationHint}"
                 Foreground="{Binding PasswordValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <CheckBox Content="Администратор"
                IsChecked="{Binding IsAdmin, Mode=TwoWay}"
                Style="{StaticResource ElegantCheckBoxStyle}"
                Margin="0,6,0,20"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
        <Button Content="Сохранить"
                Style="{StaticResource ElegantButtonStyle}"
                Width="140"
                Margin="10,0"
                Command="{Binding SaveCommand}"
                IsDefault="True" />
        <Button Content="Отмена"
                Style="{StaticResource OutlinedButtonStyle}"
                Width="120"
                Margin="10,0"
                Command="{Binding CancelCommand}"
                IsCancel="True" />
      </StackPanel>

    </StackPanel>
  </Border>
</Window>
