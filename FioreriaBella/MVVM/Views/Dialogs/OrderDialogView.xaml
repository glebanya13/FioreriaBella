<Window x:Class="FioreriaBella.MVVM.Views.Dialogs.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FioreriaBella.MVVM.ViewModels"
        Title="Aggiorna Stato Ordine"
        Height="280" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

  <Border BorderBrush="Goldenrod"
            BorderThickness="4"
            CornerRadius="12"
            Background="#FFFDF5F0"
            Padding="20"
            SnapsToDevicePixels="True">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <TextBlock Text="Aggiorna Stato Ordine"
                       FontFamily="Georgia"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="SaddleBrown"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

      <StackPanel Grid.Row="1" Margin="0,10,0,10">
        <TextBlock Text="Stato:" FontWeight="Bold" Margin="0,0,0,6" FontFamily="Palatino Linotype" FontSize="14"/>

        <ComboBox SelectedItem="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource ElegantComboBoxStyle}">
          <ComboBoxItem Content="In lavorazione"/>
          <ComboBoxItem Content="Preparato"/>
          <ComboBoxItem Content="Spedito"/>
          <ComboBoxItem Content="Consegnato"/>
          <ComboBoxItem Content="Annullato"/>
        </ComboBox>
      </StackPanel>

      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
        <Button Content="Salva"
                        Width="140"
                        Style="{StaticResource ElegantButtonStyle}"
                        Margin="5"
                        Command="{Binding SaveCommand}" />
        <Button Content="Annulla"
                        Width="120"
                        Style="{StaticResource OutlinedButtonStyle}"
                        Margin="5"
                        Command="{Binding CancelCommand}" />
      </StackPanel>
    </Grid>
  </Border>
</Window>
