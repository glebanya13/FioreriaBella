<Window x:Class="FioreriaBella.MVVM.Views.Dialogs.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FioreriaBella.MVVM.ViewModels"
        Title="ProductDialog"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowState="Maximized">

  <Border Background="#FFFDF5F0"
          CornerRadius="20"
          Padding="40"
          BorderThickness="3"
          BorderBrush="SaddleBrown"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="700"
          Opacity="0.97">
    <StackPanel>

      <TextBlock Text="Детали продукта"
                 FontSize="28"
                 FontFamily="Georgia"
                 FontWeight="Bold"
                 Foreground="SaddleBrown"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,30" />

      <TextBlock Text="Название"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Text="{Binding NameValidationHint}"
                 Foreground="{Binding NameValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <TextBlock Text="Описание"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Height="16" />

      <TextBlock Text="Цена (€)"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Text="{Binding PriceValidationHint}"
                 Foreground="{Binding PriceValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <TextBlock Text="Количество"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,0" />
      <TextBlock Text="{Binding QuantityValidationHint}"
                 Foreground="{Binding QuantityValidationColor}"
                 FontSize="14"
                 Margin="0,3,0,12" />

      <TextBlock Text="Ссылка на изображение"
                 FontSize="18"
                 Foreground="SaddleBrown" />
      <TextBox Text="{Binding Picture, UpdateSourceTrigger=PropertyChanged}"
               Style="{StaticResource ElegantInputStyle}"
               Height="40"
               Padding="8,5"
               Margin="0,6,0,20" />

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
        <Button Content="Сохранить"
                Style="{StaticResource ElegantButtonStyle}"
                Width="140"
                Margin="10,0"
                Command="{Binding SaveCommand}"
                IsDefault="True" />
        <Button Content="Отмена"
                Style="{StaticResource OutlinedButtonStyle}"
                Width="120"
                Margin="10,0"
                Command="{Binding CancelCommand}"
                IsCancel="True" />
      </StackPanel>

    </StackPanel>
  </Border>
</Window>
