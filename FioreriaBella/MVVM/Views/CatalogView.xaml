<Page x:Class="FioreriaBella.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FioreriaBella.Models"
      Title="Catalogo">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>

  <Grid>
    <Border Padding="20"
            BorderBrush="DarkOliveGreen"
            BorderThickness="2"
            CornerRadius="12"
            Margin="30"
            Background="#FFFDF5F0"
            SnapsToDevicePixels="True">

      <StackPanel>

        <Button Content="← Indietro"
                Width="100"
                Margin="0,0,0,15"
                HorizontalAlignment="Left"
                Style="{StaticResource ElegantButtonStyle}"
                Click="Back_Click"/>

        <TextBlock Text="Catalogo Fiori Freschi"
                   FontSize="26"
                   FontFamily="Georgia"
                   FontWeight="Bold"
                   Foreground="DarkOliveGreen"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Sfoglia la nostra selezione di fiori freschi e piante."
                   FontSize="16"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
          <ItemsControl x:Name="ProductsList"
                        HorizontalAlignment="Stretch">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
              <DataTemplate DataType="{x:Type local:Product}">
                <Border BorderBrush="Goldenrod" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Background="White" MinWidth="200" MaxWidth="220">
                  <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                      <Image Source="{Binding ImageUrl}" Width="60" Height="60" Margin="0,0,10,0"/>
                      <StackPanel Width="130">
                        <TextBlock Text="{Binding Name}" 
                                   FontWeight="Bold" FontSize="14" Foreground="#4B2E2B"
                                   TextTrimming="CharacterEllipsis" 
                                   TextWrapping="NoWrap" />
                        <TextBlock Text="{Binding Price, StringFormat=€{0:F2}}" 
                                   FontWeight="SemiBold" Foreground="DarkOliveGreen" Margin="0,5,0,0"/>
                      </StackPanel>
                    </StackPanel>

                    <TextBlock Text="{Binding Description}" 
                               FontStyle="Italic" Foreground="#4B2E2B" 
                               TextWrapping="Wrap" FontSize="11" 
                               MaxHeight="48" 
                               TextTrimming="WordEllipsis" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0" >
                      <Button Content="Carte"
                              Style="{StaticResource ElegantButtonStyle}"
                              Width="70" Height="24"
                              Margin="0,0,5,0"
                              Tag="{Binding Id}"
                              FontSize="11"
                              Click="AddToCart_Click"/>

                      <Button Content="Wishlist"
                              Style="{StaticResource ElegantButtonStyle}"
                              Width="70" Height="24"
                              Tag="{Binding Id}"
                              FontSize="11"
                              Click="AddToWishlist_Click"/>
                    </StackPanel>

                  </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>

          </ItemsControl>
        </ScrollViewer>

      </StackPanel>
    </Border>
  </Grid>
</Page>
