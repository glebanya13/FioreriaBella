<Page x:Class="FioreriaBella.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage"
      Background="Transparent">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>

  <Grid>
    <Border Background="#FFFDF5F0"
            CornerRadius="20"
            Padding="25"
            BorderThickness="3"
            BorderBrush="SaddleBrown"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="420"
            Opacity="0.97">

      <StackPanel>
        <TextBlock Text="Crea un account"
                   FontSize="22"
                   FontFamily="Palatino Linotype"
                   FontWeight="Bold"
                   Foreground="DarkOliveGreen"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <TextBlock Text="Nome utente"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <TextBox x:Name="UsernameBox"
                 Margin="0,1,0,0"
                 Height="32"
                 Padding="6,3"
                 Style="{StaticResource ElegantInputStyle}"
                 FocusVisualStyle="{x:Null}"/>
        <TextBlock x:Name="UsernameError"
                   Foreground="Red"
                   FontSize="12"
                   Margin="0,1,0,5"
                   Height="16"
                   Text=""
                   Visibility="Visible"/>

        <TextBlock Text="Email"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <TextBox x:Name="EmailBox"
                 Margin="0,1,0,0"
                 Height="32"
                 Padding="6,3"
                 Style="{StaticResource ElegantInputStyle}"
                 FocusVisualStyle="{x:Null}"/>
        <TextBlock x:Name="EmailError"
                   Foreground="Red"
                   FontSize="12"
                   Margin="0,1,0,5"
                   Height="16"
                   Text=""
                   Visibility="Visible"/>

        <TextBlock Text="Password"
                   FontSize="15"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   Margin="0,0,0,1"/>
        <PasswordBox x:Name="PasswordBox"
                     Margin="0,1,0,0"
                     Height="32"
                     Padding="6,3"
                     Style="{StaticResource ElegantPasswordStyle}"
                     FocusVisualStyle="{x:Null}"/>
        <TextBlock x:Name="PasswordError"
                   Foreground="Red"
                   FontSize="12"
                   Margin="0,1,0,10"
                   Height="16"
                   Text=""
                   Visibility="Visible"/>

        <Button Content="Registrati"
                Width="150"
                Height="38"
                HorizontalAlignment="Center"
                Style="{StaticResource ElegantButtonStyle}"
                Margin="0,0,0,6"
                Click="RegisterButton_Click"/>

        <Button Content="Accedi"
                Width="150"
                Height="38"
                HorizontalAlignment="Center"
                Style="{StaticResource OutlinedButtonStyle}"
                Click="LoginButton_Click"/>
      </StackPanel>
    </Border>
  </Grid>
</Page>
