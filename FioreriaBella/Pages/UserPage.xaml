<Page x:Class="FioreriaBella.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserPage"
      Background="Transparent">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>

  <Grid Background="Transparent" Margin="20">
    <Border Background="#FFFDF5F0"
            CornerRadius="20"
            Padding="30"
            BorderThickness="3"
            BorderBrush="DarkOliveGreen"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="600"
            Opacity="0.97">

      <StackPanel>

        <TextBlock Text="{Binding Username, StringFormat='Benvenuto, {0}!'}"
                   FontSize="28"
                   FontFamily="Georgia"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Margin="0,0,0,30">
          <TextBlock Text="Dettagli account"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="SaddleBrown"
                     Margin="0,0,0,10"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="120"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Nome utente:"
                       FontWeight="Bold"
                       Foreground="DarkOliveGreen"
                       Grid.Column="0"/>
            <TextBlock Text="{Binding Username}"
                       Grid.Column="1"
                       FontStyle="Italic"/>

            <TextBlock Text="Email:"
                       FontWeight="Bold"
                       Foreground="DarkOliveGreen"
                       Grid.Column="0"
                       Margin="0,25,0,0"
                       VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Email}"
                       Grid.Column="1"
                       Margin="0,25,0,0"
                       FontStyle="Italic"
                       VerticalAlignment="Top"/>

            <TextBlock Text="Ruolo:"
                       FontWeight="Bold"
                       Foreground="DarkOliveGreen"
                       Grid.Column="0"
                       Margin="0,50,0,0"
                       VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Role}"
                       Grid.Column="1"
                       Margin="0,50,0,0"
                       FontStyle="Italic"
                       VerticalAlignment="Top"/>
          </Grid>
        </StackPanel>

        <TextBlock Text="Qui puoi esplorare il nostro catalogo di fiori freschi, gestire la tua lista dei desideri e visualizzare la tua cesta degli acquisti."
                   FontSize="16"
                   FontFamily="Palatino Linotype"
                   Foreground="SaddleBrown"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,25"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
          <Button Content="Esplora Catalogo"
            Style="{StaticResource ElegantButtonStyle}"
            Width="140"
            Height="38"
            Margin="5,0"
            Click="ExploreCatalog_Click"/>
          <Button Content="Cesta"
            Style="{StaticResource ElegantButtonStyle}"
            Width="140"
            Height="38"
            Margin="5,0"
            Click="Cart_Click"/>
          <Button Content="Lista Desideri"
            Style="{StaticResource ElegantButtonStyle}"
            Width="140"
            Height="38"
            Margin="5,0"
            Click="Wishlist_Click"/>
        </StackPanel>

        <Button Content="Esci"
                Style="{StaticResource OutlinedButtonStyle}"
                Width="140"
                Height="38"
                HorizontalAlignment="Center"
                Margin="0,30,0,0"
                Click="Logout_Click"/>
      </StackPanel>
    </Border>
  </Grid>
</Page>
